<%= simple_form_for @book do |f| %>
  <%= f.file_field :book_img %>
  <%= f.input :title, label: "Book Title " %>
  <%= f.input :description %>
  <%= f.input :author, label: "Book Author" %>

  <select name="book[category_id]">
    <% Category.all.each do |cat| %>
        <option value=<%= cat.id %>> <%= cat.name%> </option>
    <% end %>
  </select>

  <%= f.button "submit" %>
<% end %>